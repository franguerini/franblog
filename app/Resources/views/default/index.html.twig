{% extends 'base_front.html.twig' %}

{% block body %}

    <div class="container" xmlns="http://www.w3.org/1999/xhtml">
        <div class="row">
            <div class="col-md-8">
                <center><h1>Posts</h1></center>
                {% for post in posts %}
                    <div class="col-md-6">
                        <h3>
                            <a href="{{ path('post_show', { 'id': post.id }) }}" > {{ post.titulo }}</a>
                        </h3>
                        {{ post.contenido }}
                    </div>
                {% endfor %}
            </div>
            <div class="col-md-4">
                <center><h2>Filtros</h2></center>
                <hr>
                <form method="get">
                <h3>Categorias</h3>
                {% for cate in categorias %}
                    <div class="checkbox">
                        <label><input name="category[]" type="checkbox" value="{{ cate.id }}" {% if cate.id in filtroCategorias %} checked="true" {% endif %}> {{ cate.nombre }}</label>
                    </div>
                {% endfor %}
                <hr>
                <h3>Autores</h3>
                {% for autor in autores %}
                    <div class="checkbox">
                        <label><input name="autores[]" type="checkbox" value="{{ autor.id }}" {% if autor.id in filtroAutor %} checked="true" {% endif %} >{{ autor.nombre }}</label>
                    </div>
                {% endfor %}
                    <input type="submit" value="submit">
                </form>

            </div>

        </div>
    </div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
